pipeline {
    agent any 
    environment {
        BUILD_NUMBER = 'LATEST'
        registry = 'vmahecha07/nodefront'
        registry2 = 'vmahecha07/nodeapp'
        registryCredential = 'vmahecha07'
        dockerImage = ''
    }
    stages {
        stage('clone') {
            steps {
                echo 'clone the repo'
                sh 'rm -fr deploy'
                git branch: 'develop', url: 'https://github.com/vmahecha/deploy.git'
                sh 'pwd'
            }
        }
        stage('test') {
            steps {
                sh '''
                sudo kubectl get nodes
                '''
            }
        }
    }
}