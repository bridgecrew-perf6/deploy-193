pipeline {
    agent any 
    environment {
        BUILD_NUMBER = 'LATEST'
        registry = 'vmahecha07/nodefront'
        registry2 = 'vmahecha07/nodeapp'
        registryCredential = 'vmahecha07'
        dockerImage = ''
    }
    stages {
        stage('clone') {
            steps {
                sh '''
                cd
                git clone 'https://github.com/vmahecha/deploy.git'
                cd deploy/frontend
                kubectl apply -f frontdeployment.yml
                kubectl apply -f service.yml
                pwd
                ls
                '''
            }
        }
    }
}